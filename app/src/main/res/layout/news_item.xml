<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_margin="5sp"
              android:background="@drawable/border_blue_shape"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/tv_title"
            android:gravity="center|start"
            android:textSize="14sp"
            android:layout_margin="5sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Some News Headline which is neither short, nor long"/>

    <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:gravity="center|start"
            android:textSize="12sp"
            android:layout_margin="5sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            tools:text="Some news body which is long. Really long. Some news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really longSome news body which is long. Really long"/>

    <ImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_margin="5sp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background"/>

</LinearLayout>